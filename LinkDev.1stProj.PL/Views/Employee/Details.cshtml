
@{
    ViewData["Title"] = "Details";
}
@model EmployeeToReturnDto
<h1>Details</h1>

<div class="form-group">
    @if (!string.IsNullOrEmpty(Model.image))
    {
        <img src="~/Files/Images/@Model.image" alt="Employee Image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
    }
    else
    {
        <p>No image available.</p>
    }
</div>

<div class="form-group">
    <label asp-for="ID" class="col-form-label"></label>
    <input readonly asp-for="ID" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input readonly asp-for="Name" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input readonly asp-for="Age" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Adress" class="col-form-label"></label>
    <input readonly asp-for="Adress" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="salary" class="col-form-label"></label>
    <input readonly asp-for="salary" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input readonly asp-for="Email" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input readonly asp-for="PhoneNumber" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="EmployeeType" class="col-form-label"></label>
    <input readonly asp-for="EmployeeType" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Gender" class="col-form-label"></label>
    <input readonly asp-for="Gender" class="form-control" />
</div>

<br></br>
<a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a>
<a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
<a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>





@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
@model CreatedDepartmentDto

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="code" class="col-form-label"></label>
        <input asp-for="code" class="form-control" />
        <span asp-validation-for="code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreationDate" class="col-form-label"></label>
        <input asp-for="CreationDate" class="form-control" type="date" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
</form>
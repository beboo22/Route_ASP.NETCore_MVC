@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
@model LinkDev._1stProj.BLL.Entity.DeptEntity.UpdateDepartmentDto
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="code" class="col-form-label"></label>
        <input asp-for="code" class="form-control" />
